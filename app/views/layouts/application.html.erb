<!DOCTYPE html>
<html>
<head>
  <title>CoursesApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag    'styles', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if notice %>
  <p><%= notice %></p>
<% end %>
<% if alert %>
  <p><%= alert %></p>
<% end %>

<p>
<% if user_signed_in? %>

  <%= link_to 'Edit profile', edit_user_registration_path, :class => 'edit-profile-link' %> 
  <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'log-out-link'  %>
<% else %>
  <%= link_to "Sign up", new_user_registration_path, :class => 'sign-up-link'  %> 
  <%= link_to "Login", new_user_session_path, :class => 'log-in-link'  %>
<% end %>
</p>

<%= yield %>

</body>
</html>
