<h2>Edit <%= @course.course_name %></h2>

<h2>Remove Students from this Course</h2>
  <ul>
    <% @course.students.each do |student| %>
      <li><%= link_to "#{student.first_name} #{student.last_name}", student_path(student.id) %>  <%= button_to "Remove #{student.first_name}", {:controller => :courses, :action => 'remove_student', :student_id => student.id }, :method => :delete, :class => "btn" %></li> 
    <% end %>   
  </ul>
<br>
<br>
<h2>Change the Course Name</h2>
<%= form_for [@course] do |form| %>
  <%= form.label :course_name %>: <%= form.text_field :course_name %></br></br>
  <%= form.submit :class => "btn" %>
<% end %>
<br>
<br>

<%= button_to "Delete #{@course.course_name}", {:controller => :courses, :action => 'destroy', :id => @course.id }, :method => :delete, :class => "btn" %>

<h2><%= link_to 'View all Courses', courses_path %></h2>
<h2><%= link_to 'View all Students', students_path %></h2>