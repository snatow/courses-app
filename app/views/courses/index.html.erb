<h1>All Courses</h1>

<div class="contain">
  <% @course.each do |course| %>
    <h2><%= link_to course.course_name, course_path(course.id) %></h2>
    <h3>Number of Students Enrolled: <%= course.students.count %></h3>
  <% end %>

  <% if current_user %>
    <h3 class="new-link"><%= link_to 'New Course', new_course_path %></h3>
  <% end %>
</div>

<h4><%= link_to 'View all Students', students_path %></h4>