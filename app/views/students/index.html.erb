<h1>All Students</h1>

<div class="contain">
  <% @student.each do |student| %>
    <h2><%= link_to "#{student.first_name} #{student.last_name}", student_path(student.id) %></h2>
    <h3 class="indent">Number of Courses: <%= student.courses.count %></h3>
  <% end %>

  <% if current_user %>
    <h3 class="new-link"><%= link_to 'New Student', new_student_path %></h3>
  <% end %>
</div>

<h4><%= link_to 'View all Courses', courses_path %></h4>